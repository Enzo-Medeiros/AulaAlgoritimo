#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#define N 50
int main(){
char s[N];
int i;
    printf("Digite um texto:\n");
    fgets(s, N, stdin);
    fflush(stdin);

    s[strcspn(s, "\n")] = '\0'; //isso remove o caracter nulo
  //isso Ã© o tamanho da string
i=strlen(s);
    printf("\nTamanho do Texto digitado: %d\n", i);

    printf("Impressao de posicao em posicao\n");
        for(i=0; i<strlen(s); i++){
            printf("%d - %c \n", i, s[i]);
        }
        return 0;
}
